<h2>TIM KIEM</h2>
<div >
<%= form_tag home_search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>
<h4>KET QUA</h4>
<% unless @book.nil? %>
	
	<div class="col-md-8 col-md-offset-2"
		<ul class="list-group">
		<% @book.each do |book| %>
			<li class="list-group-item"><%= link_to book.title.capitalize ,home_show_path(id: book.id) %></li>
		<% end %>
		</ul>
		<% else %>

		<p class="alert alert-danger" style="font-size: 1.2em"> Khong tim thay sach : <%=params[:search] %></p>

	<% end %>
<%= link_to "Back", :back %>
</div>
